# Laptop = eDP-1
# Main Display = DP-4
# Side Display = DP-3

# Change Terminals to alternate screens
workspace $ws1 output DP-4
workspace $ws3 output DP-3
workspace $ws4 output DP-4

# Change one of the terminal screens to always
# open on the laptop
workspace $ws2 output eDP-1

# Change Browsers to alternate screens
workspace $ws5 output DP-4
workspace $ws6 output DP-3

# Change Dev/Code to alternate screens
workspace $ws7 output DP-4
workspace $ws8 output DP-3

